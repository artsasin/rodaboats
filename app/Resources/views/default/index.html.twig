{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            $('[data-toggle="tooltip"]').tooltip();
            $('[data-toggle="popover"]').popover();
            $('.booking').each(function(index, el) {
                var td = $(el).closest('td.slot');
                var h = 0;
                var w = 0;
                if (td.length > 0) {
                    h = td[0].offsetHeight;
                    w = td[0].offsetWidth;
                }

                if (h > 0 && w > 0) {
                    $(el).css('height', h - 3);
                }
            });

            $('#datetimepicker44').datetimepicker({
                ignoreReadonly: true,
                showClose: true,
                format: 'dddd, MMM DD YYYY',
                viewDate: "{{ date|date('Y-m-d') }}",
                defaultDate: "{{ date|date('Y-m-d') }}"
            }).on('dp.change', function(e) {
                document.location = Routing.generate('calendardate', { date: e.date.format('YYYY-MM-DD') }, false);
            });
            $('#dt-toggler').on('click', function(e) {
                $('#datetimepicker44').datetimepicker().data('DateTimePicker').toggle();
            });
        })
