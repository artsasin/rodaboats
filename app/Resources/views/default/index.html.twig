{% extends 'base_sb.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        .booking {
            position: relative;
            background-color: #d0e9c6;
            overflow: hidden;
            padding: 0 3px;
        }
        .booking div.booking-header {
            font-size: 12px;
            text-align: center;
            border-bottom: 1px dotted white;
            position: relative;
            clear: both;
            overflow: auto;
            padding: 1px;
            margin-bottom: 5px;
        }
        .booking div.booking-header .time {
            margin-top: 3px;
            margin-left: 3px;
            font-size: 13px;
            font-weight: bold;
        }
        .booking .person-name {
            font-size: 13px;
        }
        .booking .people-count {
            font-size: 12px;
            font-weight: bolder;
            margin-left: 6px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6">
                        <button class="btn btn-default btn-lg pull-left" type="button" style="margin-right: 20px;" id="dt-toggler">
                            <i class="fa fa-calendar"></i>
                        </button>
                        <a href="{{ path('calendardate', { 'date': prev_date }) }}" class="btn btn-default btn-lg pull-left" role="button">
                            <i class="fa fa-chevron-left"></i>
                        </a>
                        <input
                                class="input-lg pull-left"
                                style="border-radius: 0; border: none; text-align: center; font-weight: bold;"
                                id="datetimepicker44"
                        />
                        <a href="{{ path('calendardate', { 'date': next_date }) }}" class="btn btn-default btn-lg pull-left" role="button">
                            <i class="fa fa-chevron-right"></i>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <span class="header-nav pull-right">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    Location
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                                    <li>
                                        <a href="{{ path('calendardate', { 'date': date|date('Y-m-d') }) }}">All locations</a>
                                    </li>
                                    <li role="separator" class="divider"></li>
                                    {% for location in locations %}
                                        <li>
                                            <a href="{{ path('calendardate', { 'date': date|date('Y-m-d'), 'location': location.id }) }}">{{ location.name }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table class="table calendar">
                        <thead>
                        <tr>
                            <th class="col-xs-1 col-md-1">Time</th>
                            {% for boat in calendar.boats %}
                            <th>{{ boat.name }}<br/>
                                <small>{% if boat.location != null %}{{ boat.location.name }}{% endif %}</small>
                                <br/>
                                <a href="{{ path('addbookingspecific', { 'boat': boat.id, 'date': date|date('Y-m-d') }) }}">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> book
                                </a>
                            </th>
                            {% endfor %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for slot in calendar.slots %}
                            <tr>
                                {% if slot.minutes % 30 == 0 %}
                                    <td rowspan="2" style="vertical-align: top; padding: 0 0 0 5px; font-size: 12px;">
                                        {{ slot.format() }}
                                    </td>
                                {% endif %}
                                {% for boat in calendar.boats %}
                                    {% set booking = calendar.getBooking(boat, slot) %}
                                    {% if booking %}
                                        <td class="slot" rowspan="{{ booking.minutes / 15 }}" style="padding: 1px; overflow: hidden;">
                                            <div class="booking">
                                                <div class="booking-header">
                                                    <div class="time pull-left">
                                                        <a href="{{ path('viewbooking', { 'id': booking.id }) }}">
                                                            {{ booking.start|date('G:i') }} - {{ booking.end|date('G:i') }}&nbsp;({{ booking.hours }}h)
                                                        </a>
                                                    </div>
                                                    <div
                                                            class="pull-right"
                                                            style="min-height: 24px;"
                                                            {% if booking.comments %}data-toggle="tooltip" data-placement="top" title="{{ booking.comments }}" data-container="body" data-placement="auto"{% endif %}
                                                    >
                                                        {% if booking.comments %}
                                                            <i class="fa fa-external-link-square fa-2x" aria-hidden="true"></i>
                                                        {% else %}
                                                            &nbsp;
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="person-name">
                                                    {{ booking.lesseeLastName }}, {{ booking.lesseeFirstName }}
                                                </div>
                                                <div class="people-count">{{ booking.numberOfPeople }} passengers</div>
                                            </div>
                                        </td>
                                    {% elseif not calendar.busySlot(boat, slot) %}
                                        <td class="slot available" style="padding: 8px 0;" data-boat="{{ boat.id }}" data-minutes="{{ slot.minutes }}"></td>
                                    {% endif %}
                                {% endfor %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

