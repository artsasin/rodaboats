                {#</div>#}
                {#<span class="glyphicon glyphicon-calendar" aria-hidden="true" id="datepicker"></span>#}
                <a href="{{ path('calendardate', { 'date': prev_date }) }}" class="title-nav">
                    <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                </a>
                <span>{{ date|date('l j M Y') }}</span>
                <a href="{{ path('calendardate', { 'date': next_date }) }}" class="title-nav">
                    <span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
                </a>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table class="table calendar">
                        <thead>
                        <tr>
                            <th class="col-xs-1 col-md-1">Time</th>
                            {% for boat in calendar.boats %}
                            <th>{{ boat.name }}<br/>
                                <small>{% if boat.location != null %}{{ boat.location.name }}{% endif %}</small>
                                <br/>
                                <a href="{{ path('addbookingspecific', { 'boat': boat.id, 'date': date|date('Y-m-d') }) }}">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> book
                                </a>
                            </th>
                            {% endfor %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for slot in calendar.slots %}
                            <tr>
                                {% if slot.minutes % 30 == 0 %}
                                    <td rowspan="2" style="vertical-align: top; padding: 0 0 0 5px; font-size: 12px;">
                                        {{ slot.format() }}
                                    </td>
                                {% endif %}
                                {% for boat in calendar.boats %}
                                    {% set booking = calendar.getBooking(boat, slot) %}
                                    {% if booking %}
                                        <td class="slot" rowspan="{{ booking.minutes / 15 }}" style="padding: 1px; overflow: hidden;">
                                            <div class="booking" {% if booking.comments %}data-toggle="tooltip" data-placement="top" title="{{ booking.comments }}" data-container="body" data-placement="auto"{% endif %}>
                                                <p class="time">
                                                    <a href="{{ path('viewbooking', { 'id': booking.id }) }}">
                                                        {{ booking.start|date('G:i') }} - {{ booking.end|date('G:i') }}&nbsp;({{ booking.hours }}h)
                                                    </a>
                                                    {% if booking.comments %}
                                                        <span class="pull-right">
                                                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                                                        </span>
                                                    {% endif %}
                                                </p>
                                                <div class="person-name">
                                                    {{ booking.lesseeLastName }}, {{ booking.lesseeFirstName }}
                                                </div>
                                                <div class="people-count">{{ booking.numberOfPeople }} passengers</div>
                                            </div>
                                            {#<a href="{{ path('viewbooking', { 'id': booking.id }) }}">#}
                                                {#{{ booking.lesseeLastName }}<br />#}
                                                {#<small>{{ booking.start|date('G:i') }} - {{ booking.end|date('G:i') }}</small>#}
                                            {#</a>#}
                                        </td>
                                    {% elseif not calendar.busySlot(boat, slot) %}
                                        <td class="slot available" style="padding: 8px 0;" data-boat="{{ boat.id }}" data-minutes="{{ slot.minutes }}"></td>
                                    {% endif %}
                                {% endfor %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

