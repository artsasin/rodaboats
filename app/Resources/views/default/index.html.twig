{% extends 'base_sb.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        .booking {
            position: relative;
            background-color: #a8c8d8;
            overflow: hidden;
            padding: 0 3px;
        }
        .booking p.time {
            text-align: center;
            border-bottom: 1px dotted white;
            font-size: 11px;
            font-weight: bold;
        }
        .booking .person-name {
            font-size: 13px;
        }
        .booking .people-count {
            font-size: 12px;
            font-weight: bolder;
            margin-left: 6px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-header">
                <span class="header-nav pull-right">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Location
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                            <li>
                                <a href="{{ path('calendardate', { 'date': date|date('Y-m-d') }) }}">All locations</a>
                            </li>
                            <li role="separator" class="divider"></li>
                            {% for location in locations %}
                                <li>
                                    <a href="{{ path('calendardate', { 'date': date|date('Y-m-d'), 'location': location.id }) }}">{{ location.name }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </span>
                <span class="header-nav pull-left">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <span class="glyphicon-calendar glyphicon"></span>&nbsp;
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                            <li>
                                <div id="datetimepicker12"></div>
                            </li>
                        </ul>
                    </div>
                </span>
