{% extends 'base_sb.html.twig' %}

{% block common_body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            {% if customer.language == 'de' %}
                                Newsletter abbestellen
                            {% elseif customer.language == 'es' %}
                                Darse de baja de boletines informativos
                            {% elseif customer.language == 'fr' %}
                                Se désabonner des bulletins d'information
                            {% else %}
                                Unsubscribe from newsletters
                            {% endif %}
                        </h3>
                    </div>
                    <div class="panel-body">
                        {% if customer.language == 'de' %}
                            Ihre Adresse <strong>{{ customer.email }}</strong> ist von der Liste der Newsletter ausgeschlossen
                        {% elseif customer.language == 'es' %}
                            Su dirección <strong>{{ customer.email }}</strong> está excluida de la lista de boletines
                        {% elseif customer.language == 'fr' %}
                            Votre adresse <strong>{{ customer.email }}</strong> est exclue de la liste des newsletters
                        {% else %}
                            Your address <strong>{{ customer.email }}</strong> is excluded from the list of newsletters
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}