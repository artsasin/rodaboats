{% extends 'base_sb.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('vue/customer/customer-list.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h1 class="page-header">
                <span class="header-nav">
                    <button class="btn btn-success" type="button" data-toggle="modal" data-target="#exportModal">
                        <span class="fa fa-download" aria-hidden="true"></span> Export
                    </button>
                </span>
                Customers
            </h1>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div id="app"></div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exportModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <form action="{{ path('app.customer.export_csv') }}" target="_blank">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Export customers</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label">Format</label>
                                    <select class="form-control" name="export_format">
                                        <option value="csv">CSV</option>
                                        <option value="plain">Plain text</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label class="control-label">Language filter</label>
                                    <select class="form-control" name="lang">
                                        <option value="all">All</option>
                                        {% for lang in langs %}
                                            <option value="{{ lang.value }}">{{ lang.text }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Export</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        window.customerModel = {{ customerModel | json_encode | raw }};
        window.langs = {{ langs | json_encode | raw }};
        window.countries = {{ countries | json_encode | raw }};
    </script>
    <script src="{{ asset('vue/customer/customer-list.js') }}"></script>
{% endblock %}