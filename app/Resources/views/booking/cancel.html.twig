{% extends 'base_sb.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h1 class="page-header">Cancel booking</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <p>Are your sure you want to cancel the booking? Please specify a cancellation reason.</p>
        </div>
    </div>

    {{ form_start(form) }}
    <div class="form-group">
        <label class="col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label">Boat</label>
        <div class="col-xs-10 col-sm-10 col-sm-10 col-lg-10">
            <p class="form-control-static">
                {% if booking.boat is empty %}
                {% else %}
                    <a href="{{ path('viewboat', { 'id' : booking.boat.id }) }}"">{{ booking.boat.name }}</a>
                {% endif %}
            </p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label">Date and time</label>
        <div class="col-xs-10 col-sm-10 col-sm-10 col-lg-10">
            <p class="form-control-static">
                {{ booking.date|date('l j M Y') }} {{ booking.start|date('G:i') }} - {{ booking.end|date('G:i') }}
            </p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-2 col-md-2 col-sm-2 col-xs-2 control-label">Lessee name</label>
        <div class="col-xs-10 col-sm-10 col-sm-10 col-lg-10">
            <p class="form-control-static">{{ booking.lesseeName }}</p>
        </div>
    </div>

    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}