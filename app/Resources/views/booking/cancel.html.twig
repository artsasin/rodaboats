{% extends 'base.html.twig' %}

{% block body %}

	<h1 class="page-header">Cancel booking</h1>
	
	<p>Are your sure you want to cancel the booking? Please specify a cancellation reason.</p>
	
	{{ form_start(form) }}
	
	<div class="form-group">
		<label class="col-sm-2 control-label">Boat</label>
		<div class="col-sm-10">
			<p class="form-control-static">
				{% if booking.boat is empty %}
				{% else %}
					<a href="{{ path('viewboat', { 'id' : booking.boat.id }) }}"">{{ booking.boat.name }}</a>
				{% endif %}
			</p>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Date and time</label>
		<div class="col-sm-10">
			<p class="form-control-static">{{ booking.date|date('l j M Y') }} {{ booking.start|date('G:i') }} - {{ booking.end|date('G:i') }}</p>
		</div>
	</div>
	<div class="form-group">
		<label class="col-sm-2 control-label">Lessee name</label>
		<div class="col-sm-10">
			<p class="form-control-static">{{ booking.lesseeName }}</p>
		</div>
	</div>
	
	{{ form_widget(form) }}
	{{ form_end(form) }}
{% endblock %}