{% extends 'base.html.twig' %}

{% block title %}Booking {{ booking.lesseeName }} | {{ booking.date|date('l j M Y') }} {{ booking.start|date('G:i') }} - {{ booking.end|date('G:i') }} - RoDa Boats{% endblock %}

{% block body %}

	<h1 class="page-header">
		<span class="header-nav">
			<a href="{{ path('editbooking', { 'id': booking.id }) }}" class="btn btn-default" type="button"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>
			<a href="{{ path('bookinglog', { 'id': booking.id }) }}" class="btn btn-default" type="button"><span class="glyphicon glyphicon-time" aria-hidden="true"></span> Log</a>
			<a href="{{ path('closebooking', { 'id': booking.id }) }}" class="btn btn-primary" type="button"><span class="glyphicon glyphicon-check" aria-hidden="true"></span> Close</a>
			<a href="{{ path('cancelbooking', { 'id': booking.id }) }}" class="btn btn-danger" type="button"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancel</a>
		</span>
		
		View booking
	</h1>
	
	<div class="row">
		<div class="col-md-6">
		
			<div class="panel panel-default">
				<div class="panel-heading">
    				<h3 class="panel-title">Booking</h3>
				</div>
				
				<div class="panel-body form-horizontal form-compact">
			
				
					<div class="form-group">
						<label class="col-sm-5 control-label">Type</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.getTypeName }}</p>
						</div>
					</div>
					
					<div class="form-group">
						<label class="col-sm-5 control-label">Status</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ include('booking/status.html.twig', { 'booking': booking }) }}</p>
						</div>
					</div>
					
					<div class="form-group">
						<label class="col-sm-5 control-label">Cancellation</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.getCancellationName }}</p>
						</div>
					</div>
					
					<div class="form-group">
						<label class="col-sm-5 control-label">Handler</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.handler is empty ? "" : booking.handler.username }}</p>
						</div>
					</div>
					
					<div class="form-group">
						<label class="col-sm-5 control-label">Booked by</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.bookedBy }}</p>
						</div>
					</div>
				
					<div class="form-group">
						<label class="col-sm-5 control-label">Boat</label>
						<div class="col-sm-7">
							<p class="form-control-static">
								{% if booking.boat is empty %}
								{% else %}
									<a href="{{ path('viewboat', { 'id' : booking.boat.id }) }}"">{{ booking.boat.name }}</a>
								{% endif %}
							</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Date and time</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.date|date('l j M Y') }} {{ booking.start|date('G:i') }} - {{ booking.end|date('G:i') }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Location</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.location is empty ? "" : booking.location.name }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Number of people</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.numberOfPeople }}</p>
						</div>
					</div>
				</div>
			</div>
			
			<div class="panel panel-default">
				<div class="panel-heading">
    				<h3 class="panel-title">Lessee</h3>
				</div>
				
				<div class="panel-body form-horizontal form-compact">
			
		
					<div class="form-group">
						<label class="col-sm-5 control-label">Lessee name</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.lesseeName }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Lessee phone</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.lesseePhone }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Lessee identity number</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.lesseeIdentityNumber }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Lanuage</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.language }}</p>
						</div>
					</div>
				</div>
			</div>
			
		</div>
		
		<div class="col-md-6">
		
			<div class="panel panel-default">
				<div class="panel-heading">
    				<h3 class="panel-title">Price</h3>
				</div>
				
				<div class="panel-body form-horizontal form-compact">
			
		
					<div class="form-group">
						<label class="col-sm-5 control-label">Rent</label>
						<div class="col-sm-7">
							<p class="form-control-static">€ {{ booking.rent }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Rent discount</label>
						<div class="col-sm-7">
							<p class="form-control-static">€ {{ booking.rentDiscount }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Petrol cost</label>
						<div class="col-sm-7">
							<p class="form-control-static">€ {{ booking.petrolCost }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Commission</label>
						<div class="col-sm-7">
							<p class="form-control-static">€ {{ booking.commission }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Commission paid to</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.commissionPaidTo }}</p>
						</div>
					</div>
					
					<div class="form-group">
						<label class="col-sm-5 control-label">Deposit</label>
						<div class="col-sm-7">
							<p class="form-control-static">€ {{ booking.deposit }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Rent payment method</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.paymentMethodRent }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Deposit payment method</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.paymentMethodDeposit }}</p>
						</div>
					</div>
					
				</div>
			</div>
			
			<div class="panel panel-default">
				<div class="panel-heading">
    				<h3 class="panel-title">Damage / correction</h3>
				</div>
				
				<div class="panel-body form-horizontal form-compact">
			
		
					<div class="form-group">
						<label class="col-sm-5 control-label">Damage</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.damage }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Damage / correction amount</label>
						<div class="col-sm-7">
							<p class="form-control-static">€ {{ booking.damageAmount }}</p>
						</div>
					</div>
					<div class="form-group">
						<label class="col-sm-5 control-label">Damage / correction payment method</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.paymentMethodDamage }}</p>
						</div>
					</div>
					
				</div>
			</div>
			
			<div class="panel panel-default">
				<div class="panel-heading">
    				<h3 class="panel-title">Comments</h3>
				</div>
				
				<div class="panel-body form-horizontal form-compact">
			
		
					<div class="form-group">
						<label class="col-sm-5 control-label">Comments</label>
						<div class="col-sm-7">
							<p class="form-control-static">{{ booking.comments }}</p>
						</div>
					</div>
					
				</div>
			</div>
		
		</div>
	</div>
{% endblock %}