{% extends 'base_sb.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('vendor/jquery.json-viewer/jquery.json-viewer.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <h1 class="page-header">
                Order log
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="panel panel-default">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Date</th>
                            <th>User</th>
                            <th>Changes</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for log in logs %}
                            <tr>
                                <td class="col-lg-1 col-md-1 col-sm-1 col-xs-1">
                                    {{ log.creationDate | date('Y-m-d H:i:s') }}
                                </td>
                                <td>
                                    {{ log.user.username }}
                                </td>
                                <td class="changeset" data-changeset="{{ log.changeset }}">
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('vendor/jquery.json-viewer/jquery.json-viewer.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            $('td.changeset').each(function(index) {
                $(this).jsonViewer(eval($(this).data('changeset')), {collapsed: true});
            });
        });
    </script>
{% endblock %}